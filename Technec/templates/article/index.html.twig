{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('Css/article.css') }}">
{% endblock %}

{% block body %}

<section id="conteneur">

    <h1>Articles</h1>
    <p id="intro">Mon flux informatif pour une veille de qualité</p>



    <div id="sousConteneur">

        <div id="Block1">
        

            <div class="sousBlock1 container col-md-15">

                {% for article in articles %}


                    <div class="card mb-3 shadow-2-strong">

                        <div class="divImg">

                            <img
                                src="https://mdbootstrap.com/wp-content/uploads/2020/06/vertical.jpg"
                                alt="..."
                                class="img-fluid imgCarte"
                            />

                        </div>

                        <div class="card-body">

                            <h5 class="card-title">{{ article.titre }}</h5>
                            <p class="card-text">
                            {{ article.contenu }}
                            </p>
                            <p class="card-text" id="date">
                            <small class="text-muted">Publié le: {{ article.datePublication ? article.datePublication|date('Y-m-d H:i:s') : '' }}</small>
                            <small class="text-muted">Dernière modification le: {{ article.derniereMaj ? article.derniereMaj|date('Y-m-d H:i:s') : '' }}</small>
                            </p>

                            <a type="button" class="btn btn-primary" href="{{ path('article_show', {'id': article.id}) }}">Voir</a>
                            <a type="button" class="btn btn-primary" href="{{ path('article_edit', {'id': article.id}) }}">Editer</a>

                        </div>

                        
  
                    </div>



                {% else %}
                    <h5 id="noArticlesFound">Aucun article disponible pour le moment.</h5>
                {% endfor %}

                <a  type="button" class="btn btn-primary" id="boutonAjoutArticle" href="{{ path('article_new') }}">Ajouter une article</a>

            </div>

        </div>

        <div class="block1Droite shadow-2-strong">

                <div id="articlesRecents">
                    <h3> Article récents </h3>
                </div>

        </div>

    </div>

</section>

